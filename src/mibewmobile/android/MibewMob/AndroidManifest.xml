<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scalior.mibewmob"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="MibewMobApplication">
        <receiver android:name="com.scalior.mibewmob.MibewMobServiceBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.scalior.mibewmob.activities.ChatActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.scalior.mibewmob.activities.ServerDetailsActivity"
            android:label="@string/title_activity_server_details"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scalior.mibewmob.activities.ChatActivity" />
        </activity>
        <activity
            android:name="com.scalior.mibewmob.activities.OperatorLoginActivity"
            android:label="@string/title_activity_operator_login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.scalior.mibewmob.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>

        <service
            android:name="com.scalior.mibewmob.services.PollingService"
            android:icon="@drawable/ic_launcher"
            android:label="@string/chat_service_label" >
        </service>

        <activity
            android:name="com.scalior.mibewmob.activities.ChattingActivity"
            android:label="@string/title_activity_chatting"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scalior.mibewmob.activities.ChatActivity" />
        </activity>
        <activity
            android:name="com.scalior.mibewmob.CrashActivity"
            android:label="@string/title_activity_crash" >
        </activity>
    </application>

</manifest>
